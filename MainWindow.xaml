<Window x:Class="Board.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Board"
        mc:Ignorable="d"
        Title="Board" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu x:Name="menu" Grid.Row="0">
            <MenuItem></MenuItem>
            <MenuItem></MenuItem>
        </Menu>
        <ToolBar x:Name="toolBar" Grid.Row="1"></ToolBar>
        <InkCanvas x:Name="inkCanvas" Grid.Row="2"></InkCanvas>
        <StatusBar x:Name="statusBar" Grid.Row="3"></StatusBar>
    </Grid>
</Window>
